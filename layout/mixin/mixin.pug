mixin blog(h3,date,time,comment,img,des)
  article.blog
    .blog__title
      a(href='#')= h3
    ul.blog__post
      li.blog__post--date
        span
          i.fa.fa-calendar-minus-o
        a(href='#')= date
      li.blog__post--time
        span
          i.fa.fa-clock-o
        a(href='#')= time
      li.blog__post--comment
        span
          i.fa.fa-commenting-o
        a(href='#')= comment
    .blog__img
      a(href='#')
        img(src=`images/blog/${img}.jpg` alt='images')
    p= des
//- blog


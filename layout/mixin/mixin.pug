mixin product-grid(img,sale,sl,h3,p_old,p_current)
  .product-grid__box
    .product-grid__img
      a(href="#")
        img(src=`images/product/${img}.png` alt='images')
      span(class=`product-grid__label--${sale}`)= sl
      .product-grid__overlay
      .product-grid__link
        a(href="#" class="btn__common") mua ngay
        a(href="#" class="btn__search")
          i.fa.fa-search
    .product-grid__content
      h3.product-grid__name
        a(href="#")= h3
      .product-grid__evaluate
        i.fa.fa-star(aria-hidden='true')
        i.fa.fa-star(aria-hidden='true')
        i.fa.fa-star(aria-hidden='true')
        i.fa.fa-star(aria-hidden='true')
        i.fa.fa-star-half-o(aria-hidden='true')
      .product-grid__price
        span.old-price= p_old
        span.new-price= p_current
//- product-grid

